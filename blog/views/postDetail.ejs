<%- include('./includes/header.ejs') %>
<%- include('./includes/navbar.ejs') %>

<section class="main-content" style="background-color: #ffffff;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12"> 
                <div class="card border-0 shadow-lg p-4" style="background-color: #f8f9fa;">
                    <h1 class="text-center mb-4" style="color: #007bff;"><%= pageTitle %></h1>
                    <% if (post.author && post.author._id && post.author._id.toString() === isAuth) { %>
                        <form action="/post-update" method="POST" class="form">
                            <p style="color: #000000; font-size: 1.2rem;"><%= post.description %></p>
                            <div class="mt-3">
                                <input type="hidden" value="<%= post._id %>" name="postId">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button type="submit" class="btn btn-primary btn-block" style="background-color: #28a745; border-color: #28a745;">Update</button> 
                            </div>
                        </form>
                    <% } else { %>
                        <div class="card border-0 shadow-lg p-4" style="background-color: #f8f9fa;">
                            <p class="text-center" style="color: #000000; font-size: 1.2rem;"><%= post.description %></p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('./includes/footer.ejs') %>
